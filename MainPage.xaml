<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <HorizontalStackLayout>
        <Label Text="Label Content" HeightRequest="25" BackgroundColor="Red"/>
        <ContentView WidthRequest="150" HeightRequest="25" BackgroundColor="Brown">
            <ContentView.Content>
                <Entry Text="Entry Content" HorizontalOptions="Fill" BackgroundColor="Blue"/>
            </ContentView.Content>
        </ContentView>
        <ContentView WidthRequest="150" HeightRequest="100" BackgroundColor="Brown">
            <ContentView>
                <Entry Text="Entry Content" BackgroundColor="Blue"/>
            </ContentView>
        </ContentView>
        <Entry Text="Entry Content" WidthRequest="100" HeightRequest="25" BackgroundColor="Blue"/>
    </HorizontalStackLayout>

</ContentPage>
